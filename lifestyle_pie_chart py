
import matplotlib.pyplot as plt

# Data for the lifestyle categories
labels = ['Study', 'Work', 'Exercise', 'Leisure', 'Sleep']
sizes = [35, 25, 10, 15, 15]  # Adjust percentages based on your lifestyle
colors = ['#ff9999','#66b3ff','#99ff99','#ffcc99','#c2c2f0']

# Create the pie chart
plt.figure(figsize=(7,7))
plt.pie(sizes, labels=labels, colors=colors, autopct='%1.1f%%', startangle=140)

# Equal aspect ratio ensures the pie chart is drawn as a circle.
plt.axis('equal')

# Title of the pie chart
plt.title('My Lifestyle Distribution')

# Show the pie chart
plt.show()
